// Database configuration
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User and Authentication
model User {
  id             String           @id @default(uuid())
  email          String           @unique
  password       String
  name           String
  role           UserRole
  department     String?
  createdOffers  BudgetaryOffer[] @relation("CreatedBy")
  approvedOffers BudgetaryOffer[] @relation("ApprovedBy")
  createdPOs     PurchaseOrder[]  @relation("POCreatedBy")
  approvedPOs    PurchaseOrder[]  @relation("POApprovedBy")
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
  USER
  BO_SPECIALIST
  PO_SPECIALIST
}

// Budgetary Offer Management
model BudgetaryOffer {
  id               String       @id @default(uuid())
  offerId          String       @unique // BO/2024/0001
  offerDate        DateTime
  toAuthority      String
  subject          String
  workItems        Json         // Array of work items
  termsConditions  String       @db.Text
  documentUrl      String?      // S3 URL
  documentHash     String?      // For digital signature verification
  status           OfferStatus
  createdBy        User         @relation("CreatedBy", fields: [createdById], references: [id])
  createdById      String
  approver         User?        @relation("ApprovedBy", fields: [approverId], references: [id])
  approverId       String?
  approvalComments String?      @db.Text
  approvalDate     DateTime?
  approvalHistory  Json[]
  tags             String[]
  emailLogs        EmailLog[]
  emds             EMD[]        // EMDs associated with this offer
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  customerId       String?      @default("CR")
}

enum OfferStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  REJECTED
}

// Email Tracking
model EmailLog {
  id              String         @id @default(uuid())
  budgetaryOffer  BudgetaryOffer @relation(fields: [budgetaryOfferId], references: [id])
  budgetaryOfferId String
  to              String[]
  cc              String[]
  bcc             String[]
  subject         String
  content         String         @db.Text
  messageId       String?
  status          EmailStatus
  error           String?        @db.Text
  sentAt          DateTime       @default(now())

  @@index([budgetaryOfferId])
}

enum EmailStatus {
  SENT
  FAILED
}

enum SiteStatus {
  ACTIVE
  INACTIVE
  UNDER_MAINTENANCE
}

// LOA status matching Excel sheet statuses
enum LOAStatus {
  NOT_STARTED           // 1. Not Started
  IN_PROGRESS           // 2. In Progress
  SUPPLY_WORK_COMPLETED // 4. Supply/Work Completed
  CHASE_PAYMENT         // 7. Chase Payment
  CLOSED                // 9. Closed
}

model Site {
  id              String           @id @default(uuid())
  name            String           @unique
  code            String           @unique  // For easy reference like MUM001, DEL002
  zoneId          String           // References customer id
  zone            Customer         @relation(fields: [zoneId], references: [id])
  location        String?          // Specific location details
  address         String           @db.Text
  contactPerson   String?
  contactPhone    String?
  contactEmail    String?
  status          SiteStatus       @default(ACTIVE)
  loas            LOA[]            // Sites where work is being executed
  purchaseOrders  PurchaseOrder[]  // POs related to this site
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([zoneId])
}

// LOA Management
model LOA {
  id                           String           @id @default(uuid())
  loaNumber                    String           @unique
  loaValue                     Float
  site                         Site?            @relation(fields: [siteId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  siteId                       String?          // Optional field
  deliveryPeriod               Json             // { start: Date, end: Date }
  dueDate                      DateTime?        // Due date for LOA completion
  orderReceivedDate            DateTime?        // Date when order/LOA was received
  workDescription              String
  documentUrl                  String           // S3 URL of LOA document
  status                       LOAStatus        @default(NOT_STARTED)
  amendments                   Amendment[]
  purchaseOrders               PurchaseOrder[]
  invoices                     Invoice[]        // Billing/Invoice records
  emds                         EMD[]            // EMDs associated with this LOA
  tags                         String[]
  remarks2                     String?          @db.Text // Additional remarks field
  // Warranty period fields
  warrantyPeriodMonths         Int?             // Warranty period in months
  warrantyPeriodYears          Int?             // Warranty period in years
  warrantyStartDate            DateTime?        // When warranty period starts
  warrantyEndDate              DateTime?        // Calculated or manually set warranty end date
  // New fields for EMD
  hasEmd                       Boolean          @default(false)
  emdAmount                    Float?
  // New fields for security deposit
  hasSecurityDeposit           Boolean          @default(false)
  securityDepositAmount        Float?
  securityDepositDocumentUrl   String?
  // New fields for performance guarantee
  hasPerformanceGuarantee      Boolean          @default(false)
  performanceGuaranteeAmount   Float?
  performanceGuaranteeDocumentUrl String?
  createdAt                    DateTime         @default(now())
  updatedAt                    DateTime         @updatedAt

  @@index([siteId])
  @@index([dueDate])
}

model Amendment {
  id              String    @id @default(uuid())
  amendmentNumber String
  documentUrl     String    // S3 URL of amendment document
  loa             LOA       @relation(fields: [loaId], references: [id])
  loaId           String
  tags            String[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Purchase Order Management
model PurchaseOrder {
  id                String             @id @default(uuid())
  poNumber          String             @unique
  site              Site               @relation(fields: [siteId], references: [id])
  siteId            String
  loa               LOA                @relation(fields: [loaId], references: [id])
  loaId             String
  vendor            Vendor             @relation(fields: [vendorId], references: [id])
  vendorId          String
  items             PurchaseOrderItem[]
  requirementDesc   String
  termsConditions   String             @db.Text
  shipToAddress     String
  baseAmount        Float              @default(0)
  taxAmount         Float              @default(0)
  additionalCharges Json[]             // Add this field for storing additional charges
  totalAmount       Float              @default(0)
  notes             String?
  documentUrl       String?
  documentHash      String?
  status            POStatus
  createdBy         User               @relation("POCreatedBy", fields: [createdById], references: [id])
  createdById       String
  approver          User?              @relation("POApprovedBy", fields: [approverId], references: [id])
  approverId        String?
  approvalComments  String?            @db.Text
  rejectionReason   String?            @db.Text
  approvalHistory   Json[]
  tags              String[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([siteId])
  @@index([loaId])
  @@index([vendorId])
}

model PurchaseOrderItem {
  id              String        @id @default(uuid())
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  purchaseOrderId String
  item            Item          @relation(fields: [itemId], references: [id])
  itemId          String
  quantity        Float
  unitPrice       Float?        // Price at time of purchase
  totalAmount     Float?        // Calculated total including tax
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([purchaseOrderId])
  @@index([itemId])
}

enum POStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  REJECTED
}

// Vendor and Item Management
model Vendor {
  id             String           @id @default(uuid())
  name           String
  email          String           @unique
  mobile         String
  gstin          String?
  address        String
  bankDetails    Json
  items          VendorItem[]
  purchaseOrders PurchaseOrder[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model Item {
  id          String             @id @default(uuid())
  name        String
  description String?
  unitPrice   Float?
  uom         String             // Unit of Measurement
  hsnCode     String?
  vendors     VendorItem[]
  poItems     PurchaseOrderItem[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model VendorItem {
  vendor    Vendor    @relation(fields: [vendorId], references: [id])
  vendorId  String
  item      Item      @relation(fields: [itemId], references: [id])
  itemId    String
  unitPrice Float     // Vendor specific price
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@id([vendorId, itemId])
}

// Customer Management
model Customer {
  id           String    @id
  name         String
  headquarters String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sites        Site[]
  
  @@map("customers")
}

// Tender Management
model Tender {
  id              String        @id @default(uuid())
  tenderNumber    String        @unique
  dueDate         DateTime
  description     String        @db.Text
  hasEMD          Boolean       @default(false)
  emdAmount       Float?
  status          TenderStatus  @default(NOT_STARTED)
  documentUrl     String?       // S3 URL of tender document
  nitDocumentUrl  String?       // S3 URL of NIT document
  emds            EMD[]         // EMDs associated with this tender
  tags            String[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

enum TenderStatus {
  NOT_STARTED               // 1. Not Started
  IN_PROGRESS               // 2. In Progress
  SUPPLY_WORK_DELAYED       // 3. Supply/Work Delayed
  SUPPLY_WORK_COMPLETED     // 4. Supply/Work Completed
  APPLICATION_PENDING       // 5. Application Pending
  UPLOAD_BILL               // 6. Upload Bill
  CHASE_PAYMENT             // 7. Chase Payment
  RETRIEVE_EMD_SECURITY     // 8. Retrieve EMD/Security
  CLOSED                    // 9. Closed
}

// Shipping Address Management
model ShippingAddress {
  id        String   @id @default(uuid())
  label     String   // e.g., "Office", "Warehouse", "Site A"
  address   String   @db.Text
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Invoice/Billing Management
model Invoice {
  id                    String    @id @default(uuid())
  loa                   LOA       @relation(fields: [loaId], references: [id], onDelete: Cascade)
  loaId                 String
  invoiceNumber         String?   // Last Invoice No.
  invoiceAmount         Float?    // Last Invoice Amount
  totalReceivables      Float?    // Total Receivables
  actualAmountReceived  Float?    // Actual Amount Received
  amountDeducted        Float?    // Amount Deducted
  amountPending         Float?    // Amount Pending
  deductionReason       String?   // Reason for deduction
  billLinks             String?   // Bill Links
  invoicePdfUrl         String?   // S3 URL of invoice PDF document
  remarks               String?   @db.Text // Additional remarks
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([loaId])
}

// EMD (Earnest Money Deposit) Management
model EMD {
  id              String      @id @default(uuid())
  amount          Float
  paymentMode     String      @default("FDR") // FDR, Bank Guarantee, Cheque, etc.
  submissionDate  DateTime
  maturityDate    DateTime
  bankName        String      @default("IDBI")
  documentUrl     String?     // S3 URL of FDR/BG document
  extractedData   Json?       // Store OCR extracted text and AI parsed data
  status          EMDStatus   @default(ACTIVE)

  // Relations - EMD can be linked to Offer, LOA, or Tender
  offer           BudgetaryOffer? @relation(fields: [offerId], references: [id], onDelete: SetNull)
  offerId         String?
  loa             LOA?            @relation(fields: [loaId], references: [id], onDelete: SetNull)
  loaId           String?
  tender          Tender?         @relation(fields: [tenderId], references: [id], onDelete: SetNull)
  tenderId        String?

  tags            String[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([offerId])
  @@index([loaId])
  @@index([tenderId])
  @@index([status])
  @@index([maturityDate])
}

enum EMDStatus {
  ACTIVE
  EXPIRED
  RELEASED
}